<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mac.hw3_1.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/listener_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="绑定到标签"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/listener_bn_inner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内部类" />

        <Button
            android:id="@+id/listener_bn_outer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="外部类" />

        <Button
            android:id="@+id/listener_bn_anonymous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="匿名内部类" />

        <Button
            android:id="@+id/listener_bn_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="activity" />

        <Button
            android:id="@+id/listener_bn_bind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绑定到标签"
            android:onClick="clickHandler"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
