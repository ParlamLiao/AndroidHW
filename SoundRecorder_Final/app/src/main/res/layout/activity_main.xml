<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/colorful"
    tools:context="com.example.mac.soundrecorder_final.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="10dp"
            android:text="监听未启动"
            android:textColor="@color/permissionColorWhite"
            app:layout_constraintBottom_toTopOf="@+id/inform"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/inform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/permissionColorWhite"
            android:layout_marginBottom="50dp"
            android:text="录音未启动"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/status"
            app:layout_constraintTop_toBottomOf="@+id/status" />

        <Button
            android:id="@+id/bn_start"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:textColor="@color/permissionColorWhite"
            android:background="#e0000000"
            android:clickable="true"
            android:text="开启服务" />

        <Button
            android:id="@+id/bn_end"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:clickable="false"
            android:textColor="@color/permissionColorWhite"
            android:text="关闭服务"
            android:background="#e0000000"
            tools:contextClickable="false" />

        <Button

            android:id="@+id/bn_apply"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:textColor="@color/permissionColorWhite"
            android:background="#e0000000"
            android:text="权限申请" />

        <Button
            android:id="@+id/bn_open"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:textColor="@color/permissionColorWhite"
            android:background="#e0000000"
            android:text="打开文件夹" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
